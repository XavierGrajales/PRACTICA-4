------------------------------------------------------------
-- Library declarations
------------------------------------------------------------
library ieee;
use ieee.std_logic_1164.all;

------------------------------------------------------------
-- Entity declaration
------------------------------------------------------------
entity my_or is
   port(
      x0, x1: in std_logic;
      y: out std_logic
   );
end my_or;

architecture my_or_arch of my_or is
------------------------------------------------------------
-- Components declaration
------------------------------------------------------------

------------------------------------------------------------
-- Signal declaration
------------------------------------------------------------

   signal p0, p1: std_logic;

------------------------------------------------------------
-- Architecture body
------------------------------------------------------------

begin
   -- suma de productos
   y <= p0 or p1;
   -- productos
   p0 <= x0 or x1;
   p1 <= x0 or x1;
end my_or_arch;
